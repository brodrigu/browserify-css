#! /usr/bin/env node
'use strict';
var fs = require('fs');
var path = require('path');
var bcss = require('../index.js');


var options = {
    'autoInject': true,
    'autoInjectOptions': {
        'verbose': false
    },
    'minify': true,
    'minifyOptions': {
        // Check out a list of CSS minify options at [CleanCSS](https://github.com/jakubpawlowicz/clean-css#how-to-use-clean-css-programmatically).
    }
};

// get input filename
var filename = process.argv[2];

var buffer = '';
fs.createReadStream(filename)
  .pipe(bcss(filename, options)).pipe(fs.createWriteStream(process.argv[3]));
